<h1>URLYTINY!</h1>
<body>
  <div id="user_header">
    <% if current_user %>
      Logged in as <%= current_user.email %>.
      <%= link_to "Log Out", logout_path %>
      <%= link_to "View Link Stats", link_stats_path %>
    <% else %>
      <%= link_to "Sign Up", signup_path %>
      <%= link_to "Log In", login_path %>
    <% end %>
  </div>




<%= form_for @url do |f|  %>
  <%= f.label :original_url  %>
  <%= f.text_field :original_url %>
  <%= f.hidden_field :user_id %>
  <%= f.submit %>
<% end %>

<% if @url.errors.any? %>
  <h3>Please correct these problems:</h3>
  <ul>
    <% @url.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>